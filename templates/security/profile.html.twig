                                                        <li><a href="" class="text-dark"><span class="font-weight-semibold">Type :</span> {{ app.user.type }}</a></li>
                                                    </ul>
                                                    <br><br>
                                                    <a href="{{ path( 'updateProfile',{'id':app.user.id}) }}"><button class="btn btn-primary btn-user btn-block" >update</button></a>


                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}