{% extends 'admin/index.html.twig' %}
{% block body %}
    <section class="sptb">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card overflow-hidden">
                        <div class="card-status bg-primary"></div>
                        <div class="card-body p-5">
                            <div class="wideget-user">
                                <div class="row">
                                    <div class="col-lg-12 col-md-12">
                                        <div class="wideget-user-desc d-sm-flex p-4 bg-light-50 br-5">
                                            <div class="wideget-user-img mr-4 relative mb-3 mb-sm-0">

                                                <img src="{{ asset('uploads/' ~ app.user.image ) }}" style="height: 120px; width: 120px;" alt="img">

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="br-4 mb-0 overflow-hidden border br-tl-0 bg-white">
                                <div class="card-body">
                                    <div class="border-0">
                                        <div class="tab-content">
                                            <div class="tab-pane active p-3" id="tab-5">
                                                <div class="profile-log-switch">
                                                    <div class="media-heading">
                                                        <h3 class="card-title mb-3 font-weight-semibold2">Personal Details</h3>
                                                    </div>
                                                    <ul class="usertab-list mb-0 mt-3">
                                                        <li><a href="" class="text-dark"><span class="font-weight-semibold">Nom :</span>{{ app.user.username }} </a></li>
                                                        <li><a href="" class="text-dark"><span class="font-weight-semibold">Pr√©nom :</span> {{ app.user.prenom }}</a></li>
                                                        <li><a href="" class="text-dark"><span class="font-weight-semibold">Login :</span>{{ app.user.login }} </a></li>
                                                        <li><a href="" class="text-dark"><span class="font-weight-semibold">Email :</span> {{ app.user.email }}</a></li>
                                                        <li><a href="" class="text-dark"><span class="font-weight-semibold">Sexe :</span>{{ app.user.sexe }} </a></li>
